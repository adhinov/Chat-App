// ---------- PROVIDER ----------
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ---------- USER AUTH ----------
model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  username  String
  phone     String?
  password  String
  role      Role      @default(USER)
  createdAt DateTime  @default(now())
  lastLogin DateTime?
}

enum Role {
  USER
  ADMIN
}

// ---------- MESSAGES (SESUAI TABEL NEON) ----------
model Messages {
  id         Int      @id @default(autoincrement())
  sender     String
  message    String
  created_at DateTime @default(now())
}
